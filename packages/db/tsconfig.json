{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Bundler",
    "module": "ESNext"
  },
  "include": [
    "src",
    "../types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    ".next",
    ".turbo",
    ".cache",
    "tmp",
    "temp",
    "**/GPT_Backups/**",
    "**/__backup__/**",
    "**/__old__/**",
    "**/*.bak.*",
    "**/*.backup.*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.tsx"
  ]
}
