{
  "name": "@spark/shared",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --clean --no-splitting && tsc --emitDeclarationOnly --outDir dist",
    "typecheck": "tsc -p tsconfig.typecheck.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^18.19.122",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  }
}