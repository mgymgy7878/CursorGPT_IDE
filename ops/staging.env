# Staging Environment Configuration
# Faz 6: Chunked Upload + SSE Retry

# AI Payload Guardrail
AI_PAYLOAD_MAX_KB=384
AI_STRING_MAX_KB=200
LOG_LEVEL=debug

# Chunked Upload
AI_CHUNK_UPLOAD_ENABLED=true
CHUNK_SIZE_KB=100
CHUNK_TTL_HOURS=24
CHUNK_STORAGE_DIR=.data/chunks

# SSE Retry
SSE_RETRY_ENABLED=true
SSE_RETRY_MAX_ATTEMPTS=3
SSE_RETRY_BACKOFF_MS=500,1000,2000,5000

# Internal System Security
INTERNAL_SYSTEM_TOKEN=staging-system-xyz-2025
RBAC_ENABLED=true

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_DASHBOARD_ENABLED=true

# Performance Targets (SLO)
TARGET_P95_MS_NORMAL=500
TARGET_P95_MS_CHUNKED=700
TARGET_SSE_RETRY_FAILURE_RATE=0.01
TARGET_CHUNK_BACKLOG_MAX=100

# Rollback Flags (emergency)
# AI_CHUNK_UPLOAD_ENABLED=false
# SSE_RETRY_ENABLED=false
