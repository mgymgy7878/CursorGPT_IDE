  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.5.4",
    "tsx": "^4.20.4",
    "rimraf": "^5.0.5",
