{
  "name": "@spark/executor",
  "version": "1.0.0",
  "description": "Spark Executor Service - Trading Engine & API",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:force": "tsc -p tsconfig.json --pretty false",
    "build:bundle": "node ./scripts/build-executor.mjs",
    "start": "node dist/index.js",
    "start:bundle": "node dist/executor.mjs",
    "start:mock": "node ../../scripts/mock-executor.js",
    "start:hybrid:run": "cross-env REAL_ROUTES=run node dist/executor.mjs",
    "start:hybrid:wfo": "cross-env REAL_ROUTES=run,walkforward node dist/executor.mjs",
    "start:real:all": "cross-env REAL_ROUTES=run,walkforward,portfolio,optimize node dist/executor.mjs",
    "clean": "rimraf dist .turbo node_modules/.cache || true",
    "dev": "tsx --watch src/index.ts",
    "dev:hybrid:run": "cross-env REAL_ROUTES=run tsx --watch src/index.ts",
    "dev:real:all": "cross-env REAL_ROUTES=run,walkforward,portfolio,optimize tsx --watch src/index.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/websocket": "^11.0.0",
    "@spark/backtest-core": "workspace:*",
    "@spark/drift-gates": "workspace:*",
    "@spark/ml-core": "workspace:*",
    "@spark/optimization": "workspace:*",
    "dotenv": "^16.0.0",
    "duckdb": "^0.9.0",
    "fastify": "~5.0.0",
    "ioredis": "^5.4.1",
    "node-fetch": "^2.6.7",
    "p-limit": "^4.0.0",
    "pino": "^9.0.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "~15.1.0"
  },
  "devDependencies": {
    "@types/node": "~20.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.5",
    "rimraf": "^5.0.10",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
