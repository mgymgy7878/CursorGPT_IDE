{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "types": ["node"],
    "composite": true,
    "noEmit": true,
    "rootDir": "src",
    "target": "ES2022",
    "lib": ["ES2022"],
    "baseUrl": ".",
    "paths": {
      "@spark/*": [
        "../../packages/*/src",
        "../../packages/*/dist",
        "../../packages/*",
        "../../packages/@spark/*/src",
        "../../packages/@spark/*/dist",
        "../../packages/@spark/*"
      ]
    }
  },
  "include": ["src", "types"],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/shared" }
  ]
}