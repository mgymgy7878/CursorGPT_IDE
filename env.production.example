# Production Environment Variables
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:4001
PORT=4001

# Binance Configuration
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_TESTNET=true

# BTCTurk Configuration (Optional)
BTCTURK_API_KEY=your_btcturk_api_key_here
BTCTURK_API_SECRET=your_btcturk_secret_key_here
BTCTURK_ENABLE_LIVE=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/spark_trading

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring
GRAFANA_PASSWORD=admin123
PROMETHEUS_RETENTION=200h

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_RECONNECT_DELAY=5000

# Trading Configuration
MAX_LEVERAGE=125
MIN_NOTIONAL=10
MAX_POSITION_SIZE=1000000

# Risk Management
MAX_DAILY_LOSS=0.05
MAX_DRAWDOWN=0.1
EMERGENCY_STOP_LOSS=0.2
