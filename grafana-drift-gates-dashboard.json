{
  "dashboard": {
    "id": null,
    "title": "Drift Gates Dashboard",
    "tags": ["drift-gates", "paper-trade", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Gate State",
        "type": "stat",
        "targets": [
          {
            "expr": "gate_state",
            "legendFormat": "{{gate_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "orange", "value": 2},
                {"color": "red", "value": 3}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Drift Score",
        "type": "stat",
        "targets": [
          {
            "expr": "drift_score",
            "legendFormat": "{{drift_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.5},
                {"color": "red", "value": 1.0}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Paper vs Live Delta",
        "type": "stat",
        "targets": [
          {
            "expr": "paper_live_delta",
            "legendFormat": "{{symbol}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.01},
                {"color": "red", "value": 0.02}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Drift Detection Latency P95",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(drift_detection_latency_ms_bucket[5m])))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 2000},
                {"color": "red", "value": 5000}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Gate Actions Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(gate_actions_total[1m]))",
            "legendFormat": "Actions/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
