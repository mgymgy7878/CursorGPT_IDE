{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@metrics": ["services/executor/src/lib/metrics"],
      "@spark/symbols": ["packages/@spark/symbols/src/index"],
      "@spark/*": ["packages/@spark/*/src"]
    }
  }
}
