{
  "name": "spark-trading-platform",
  "version": "1.3.2-SNAPSHOT",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "pnpm --filter web-next dev",
    "dev:all": "pnpm --parallel --filter ./services/* dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist .next node_modules",
    "dev:exec": "pnpm --filter @spark/executor dev",
    "build:exec": "pnpm --filter @spark/executor build",
    "ui:test": "pnpm --filter web-next exec playwright test",
    "ui:test:update": "pnpm --filter web-next exec playwright test --update-snapshots",
    "ui:test:visual": "pnpm --filter web-next exec playwright test tests/e2e/visual-smoke.spec.ts",
    "ui:hash": "tsx scripts/ux/contract-hash.ts",
    "lint:tokens": "pnpm --filter web-next exec eslint --config eslint.tokens.config.js --ext .ts,.tsx src --max-warnings=0",
    "check:ui-tokens": "node scripts/check-ui-tokens.js apps/web-next/src check",
    "check:ui-tokens:baseline": "node scripts/check-ui-tokens.js apps/web-next/src update-baseline",
    "check:ui-tokens:hotspot": "node scripts/ui-tokens-hotspot-report.js",
    "figma:tokens": "node scripts/figma/generate-tokens.mjs",
    "lint:actions": "actionlint -color",
    "fix:actions": "node scripts/fix-actions-path-filters.mjs",
    "verify": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/release/verify.ps1"
  },
  "devDependencies": {
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.1",
    "cross-env": "^10.1.0",
    "eslint-plugin-regex": "^1.10.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "next": "14.2.13",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^3.2.1",
    "zustand": "^5.0.8"
  },
  "pnpm": {
    "overrides": {
      "csstype": "3.2.3",
      "@types/react": "18.3.26",
      "@types/react-dom": "18.3.1"
    }
  }
}
