{
  "name": "spark-trading-platform",
  "version": "1.3.2-SNAPSHOT",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "pnpm --filter web-next dev",
    "dev:all": "pnpm --parallel --filter ./services/* dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r exec rm -rf dist .next node_modules",
    "dev:exec": "pnpm --filter @spark/executor dev",
    "build:exec": "pnpm --filter @spark/executor build",
    "ui:test": "pnpm --filter web-next exec playwright test",
    "ui:test:update": "pnpm --filter web-next exec playwright test --update-snapshots",
    "ui:snap": "pnpm --filter web-next exec playwright test tests/ui/dashboard.spec.ts --update-snapshots",
    "ui:diff": "pnpm --filter web-next exec playwright test tests/ui/dashboard.spec.ts",
    "ui:hash": "tsx scripts/ux/contract-hash.ts",
    "lint:tokens": "pnpm --filter web-next exec eslint --config eslint.tokens.config.js --ext .ts,.tsx src --max-warnings=0",
    "verify": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/release/verify.ps1",
    "dev:web:reset": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/dev-reset-web-next.ps1",
    "dev:web:rescue": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/web-next-dev-rescue.ps1",
    "smoke:css": "node tools/css-smoke-test.mjs",
    "smoke:css:prod": "powershell -NoProfile -ExecutionPolicy Bypass -File ./tools/css-smoke-test-prod.ps1",
    "smoke:web": "cmd /c tools/web-next-smoke.cmd",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && tsx prisma/seed.ts",
    "verify:final": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-powershell.ps1 ./scripts/verify-final.ps1",
    "verify:negative": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-powershell.ps1 ./scripts/verify-negative-tests.ps1",
    "verify:ci": "pnpm -w -r typecheck && powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-powershell.ps1 ./scripts/verify-final.ps1 -SkipExecutorCheck",
    "verify:ci:full": "pnpm -w -r typecheck && powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/run-powershell.ps1 ./scripts/verify-final.ps1",
    "release:gate": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/release-gate.ps1",
    "release:gate:warn": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/release-gate.ps1 -WarnMode",
    "release:gate:json": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/release-gate.ps1 -JsonOutput",
    "release:gate:test": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/test-release-gate-fail.ps1",
    "evidence:index": "powershell -NoProfile -ExecutionPolicy Bypass -File ./scripts/evidence-index.ps1",
    "prepack": "pnpm release:gate",
    "prepublishOnly": "pnpm release:gate"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "eslint-plugin-regex": "^1.10.0",
    "prettier": "^3.3.0",
    "prisma": "5.19.1",
    "tsx": "^4.19.2",
    "typescript": "^5.6.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@prisma/client": "5.19.1",
    "next": "14.2.13",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^3.2.1",
    "zustand": "^5.0.8"
  }
}
