{
  "name": "AI Trading Supervisor",
  "description": "Türkçe destekli AI güçlü trading supervisor uygulaması",
  "version": "1.0.0",
  "type": "nextjs",
  "framework": "next",
  "language": "typescript",
  "features": [
    "ai-chat",
    "trading-strategies",
    "real-time-data",
    "portfolio-management",
    "turkish-language"
  ],
  "pages": [
    {
      "name": "Ana Sayfa",
      "path": "/pages/AnaSayfa.tsx",
      "description": "Piyasa modülleri, grafik, AI supervisor"
    },
    {
      "name": "Strateji Jeneratörü",
      "path": "/pages/StratejiJeneratoru.tsx",
      "description": "Kod editörü + AI strateji üretimi"
    },
    {
      "name": "Stratejilerim",
      "path": "/pages/Stratejilerim.tsx",
      "description": "Kategorilere ayrılmış strateji listesi"
    },
    {
      "name": "Çalışan Stratejiler",
      "path": "/pages/CalisanStratejiler.tsx",
      "description": "Aktif botlar, pozisyon durumu"
    },
    {
      "name": "Ayarlar",
      "path": "/pages/Ayarlar/index.tsx",
      "description": "Genel ayarlar paneli"
    }
  ],
  "components": [
    {
      "name": "Sidebar",
      "path": "/components/Sidebar.tsx",
      "description": "Sol navigasyon menüsü"
    },
    {
      "name": "AIChatPanel",
      "path": "/components/AIChatPanel.tsx",
      "description": "Sağda sabit AI sohbet paneli"
    },
    {
      "name": "ModulKutusu",
      "path": "/components/ModulKutusu.tsx",
      "description": "Piyasa modül kutuları"
    },
    {
      "name": "GraphPanel",
      "path": "/components/GraphPanel.tsx",
      "description": "Grafik bileşeni"
    }
  ],
  "config": {
    "tailwind": true,
    "typescript": true,
    "eslint": true,
    "prettier": true
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "openai": "^4.0.0",
    "@anthropic-ai/sdk": "^0.7.0",
    "axios": "^1.6.0",
    "recharts": "^2.8.0",
    "monaco-editor": "^0.44.0",
    "@monaco-editor/react": "^4.6.0",
    "ws": "^8.14.0",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0"
  },
  "environment": {
    "required": [
      "NEXT_PUBLIC_BINANCE_API_KEY",
      "NEXT_PUBLIC_BINANCE_SECRET_KEY"
    ],
    "optional": [
      "NEXT_PUBLIC_OPENAI_API_KEY",
      "NEXT_PUBLIC_CLAUDE_API_KEY"
    ]
  },
  "setup": {
    "steps": [
      "npm install",
      "cp env.example .env.local",
      "npm run dev"
    ]
  },
  "automation": {
    "onOpen": [
      "echo 'Proje Cursor ile açıldı. Otomatik yedek planı etkin.'",
      "powershell -NoProfile -ExecutionPolicy Bypass -File ./safe-backup.ps1 -SkipBuild -Tag onOpen"
    ],
    "scheduledBackups": {
      "fullBackup": {
        "cron": "0 0 * * 0", 
        "command": "powershell -NoProfile -ExecutionPolicy Bypass -File ./safe-backup.ps1 -RetentionCount 7 -Tag full"
      },
      "dailyBackup": {
        "cron": "0 3 * * *",
        "command": "powershell -NoProfile -ExecutionPolicy Bypass -File ./safe-backup.ps1 -SkipBuild -RetentionCount 14 -Tag daily"
      }
    },
    "cleanupOnOpen": {
      "maxBackups": 20,
      "command": "powershell -NoProfile -ExecutionPolicy Bypass -File ./safe-backup.ps1 -SkipBuild -RetentionCount 20 -Tag opened"
    }
  }
} 