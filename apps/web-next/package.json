{
  "name": "@spark/web-next",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev -p 3003",
    "build": "next build",
    "start": "next start -p 3003",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "desktop:dev": "cross-env PORT=3015 electron ./desktop/main.js",
    "desktop:pack": "pnpm build && electron-builder -w",
    "desktop:dist": "pnpm build && electron-builder --publish=never",
    "fix:build:start:smoke": "powershell -NoProfile -ExecutionPolicy Bypass -File ../../scripts/fix_build_start_smoke.ps1"
  },
  "dependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "@tremor/react": "^3.18.7",
    "bintrees": "^1.0.2",
    "client-only": "^0.0.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dlv": "^1.1.3",
    "is-glob": "^4.0.3",
    "lucide-react": "^0.545.0",
    "next": "14.2.13",
    "object-hash": "^3.0.0",
    "picocolors": "^1.1.1",
    "postcss-js": "^5.0.1",
    "postcss-nested": "^7.0.2",
    "postcss-selector-parser": "^7.1.0",
    "prom-client": "^15.1.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.65.0",
    "recharts": "^3.2.1",
    "styled-jsx": "5.1.1",
    "swr": "^2.3.6",
    "tdigest": "^0.1.2"
  },
  "devDependencies": {
    "@types/node": "24.7.0",
    "@types/react": "19.2.2",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tree-kill": "^1.2.2",
    "typescript": "5.9.3"
  },
  "build": {
    "appId": "com.spark.platform",
    "productName": "Spark Platform",
    "directories": {
      "output": "dist"
    },
    "files": [
      "desktop/**/*",
      "public/**/*",
      ".next/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "standalone"
      },
      {
        "from": ".next/static",
        "to": ".next/static"
      },
      {
        "from": "public",
        "to": "public"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/favicon.ico"
    }
  }
}
