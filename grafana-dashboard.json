{
  "dashboard": {
    "id": null,
    "title": "Streams Metrics Dashboard",
    "tags": ["streams", "websocket", "metrics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "WS P95 Gap (ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(ws_gap_ms_bucket[5m])))",
            "legendFormat": "P95 Gap",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1000},
                {"color": "red", "value": 1500}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Ingest P95 (ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (le) (rate(ingest_latency_ms_bucket[5m])))",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 200},
                {"color": "red", "value": 300}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "WS Msgs Rate (1/s)",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(ws_msgs_total[1m]))",
            "legendFormat": "Messages/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "green", "value": 1}
              ]
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
