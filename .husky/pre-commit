#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Typecheck gate: Prevent runtime errors from missing imports/hooks
echo "ğŸ” Running typecheck (web-next)..."
if ! pnpm --filter web-next typecheck; then
  echo "âŒ Typecheck failed (web-next). Please fix errors before committing."
  exit 1
fi

# Root typecheck (all packages)
echo "ğŸ” Running typecheck (all packages)..."
if ! pnpm -w typecheck; then
  echo "âŒ Typecheck failed (all packages). Please fix errors before committing."
  exit 1
fi

echo "âœ… Typecheck passed"

